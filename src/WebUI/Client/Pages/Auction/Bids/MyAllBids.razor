@page "/bids"

<PageTitle>My Bids</PageTitle>

@if (Bids != null && Bids.Bids.Count > 0)
{
    <table class="table table-striped table-hover w-75">
        <thead>
            <tr>
                <th>Amount</th>
                <th>Date</th>
                <th>Auction</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var bid in Bids.Bids)
            {
                <tr>
                    <td>@bid.Amount</td>
                    <td>@bid.CreatedUtc.ToString("MM/dd/yyyy HH:mm")</td>
                    <td>
                        <a href="@($"auctions/{bid.AuctionItemId.ToString()}/view")" data-toggle="tooltip" data-placement="bottom">@bid.Title</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h5 class="text-center">You haven't place any bid yet.</h5>
}