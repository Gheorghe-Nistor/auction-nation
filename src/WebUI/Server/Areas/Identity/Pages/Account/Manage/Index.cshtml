@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Username" class="form-control" placeholder="Please choose your username." />
                <label asp-for="Input.Username" class="form-label"></label>
            </div>
            <div class= "form-floating mb-3">
                <input asp-for="Input.Language" class="form-control" placeholder="Please enter your preffered language." />
                <label asp-for="Input.Language" class="form-label"></label>
                <span asp-validation-for="Input.Language" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.TimeZone" class="form-control" placeholder="Please enter your preffered time zone." />
                <label asp-for="Input.TimeZone" class="form-label"></label>
                <span asp-validation-for="Input.TimeZone" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Currency" class="form-control" placeholder="Please enter your preffered currency." />
                <label asp-for="Input.Currency" class="form-label"></label>
                <span asp-validation-for="Input.Currency" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.DisplaySetting" class="form-control" placeholder="Please enter your preffered display setting." />
                <label asp-for="Input.DisplaySetting" class="form-label"></label>
                <span asp-validation-for="Input.DisplaySetting" class="text-danger"></span>
            </div>
            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Save</button>
            <br/>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
